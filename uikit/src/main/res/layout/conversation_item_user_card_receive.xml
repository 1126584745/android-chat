<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentLayout"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:background="@drawable/img_bubble_receive"
    android:padding="10dp"
    android:scaleType="fitCenter">

    <ImageView
        android:id="@+id/userCardPortraitImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:src="@mipmap/avatar_def" />

    <TextView
        android:id="@+id/userCardNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/userCardPortraitImageView"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/userCardPortraitImageView"
        android:ellipsize="end"
        android:maxWidth="100dp"
        android:maxLines="1"
        android:text="用户名"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/userIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/userCardPortraitImageView"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@id/userCardPortraitImageView"
        android:ellipsize="end"
        android:maxWidth="100dp"
        android:maxLines="1"
        android:text="wfchat_id" />

    <View
        android:id="@+id/dividerLine"
        style="@style/Line"
        android:layout_width="200dp"
        android:layout_height="0.5px"
        android:layout_below="@id/userCardPortraitImageView"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dividerLine"
        android:layout_marginLeft="5dp"
        android:text="个人名片" />

</RelativeLayout>
